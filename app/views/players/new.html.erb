<% provide(:title, 'New Player') %>

<div class="center-text">
  <div class="well well-modest left-text">
    <%= bootstrap_form_for(@player, label_errors: true) do |f| %>
      <legend>Create New Player</legend>
      <%= f.text_field :name %>
      <%= f.text_field :username, :label => "/players/***", :placeholder => "leave blank for automatic generation" %>
      <%= f.text_field :twitch,   :placeholder => "just the username itself (optional)" %>
      <%= f.text_field :youtube,  :placeholder => "just the username itself (optional)" %>
      <%= f.submit "Create", class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>
