<% provide(:title, 'Edit Iwad') %>

<%= bootstrap_form_for(@iwad, label_errors: true) do |f| %>
  <%= f.text_field   :name %>
  <%= f.hidden_field :old_username, :value => @iwad.username %>
  <%= f.text_field   :username, :label => "/iwads/***", :placeholder => "doom, chex, etc" %>
  <%= f.text_field   :author %>
  <%= f.submit "Edit Iwad" %>
<% end %>