<div class="center-text">
  <h1>Recent Demos</h1>
  <table class="table table-striped table-modest">
    <thead>
      <tr>
        <th>Date</th>
        <th>Wad</th>
        <th>Iwad</th>
        <th>Level</th>
        <th>Category</th>
        <th>Player(s)</th>
        <th>Engine</th>
        <th class="center-text">Notes</th>
        <th class="center-text">Time</th>
      </tr>
    </thead>
    <tbody>
      <% @demos.each do |demo| %>
        <tr>
          <td><%= demo.created_at.to_date.to_s %></td>
          <td class="wadfile"><%= link_to demo.wad.username, demo.wad %></td>
          <td class="wadfile"><%=link_to demo.wad.iwad.username, demo.wad.iwad %></td>
          <td><%= demo.level %></td>
          <td><%= demo.category.name %></td>
          <td class="player-cell"><%= demo.players_text %></td>
          <td><%= demo.port.family %></td>
          <td class="right-text"><%= demo.note %></td>
          <td class="right-text demo-time"><%= link_to demo.time, "#" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @demos %>
</div>